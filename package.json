{
  "dependencies": {
    "express": "^5",
    "http-proxy-middleware": "^2.0.6"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:front-admin dev:front-customer dev:auth-admin dev:auth proxy",
    "dev:front-admin": "cd client/admin/front-admin && npm run dev",
    "dev:auth-admin": "cd client/admin/auth-admin && npm run dev",
    "dev:front-customer": "cd client/customer && npm run dev",
    "dev:auth": "cd client/auth && npm run dev",
    "start": "npm-run-all --parallel start:front-admin start:front-customer start:auth-admin start:auth",
    "start:front-admin": "cd client/admin/front-admin && npm run dev",
    "start:auth-admin": "cd client/admin/auth-admin && npm run dev",
    "start:front-customer": "cd client/customer && npm run dev",
    "start:auth": "cd client/auth && npm run dev",
    "install": "npm-run-all --parallel install:front-admin install:front-customer install:auth-admin install:auth",
    "install:front-admin": "cd client/admin/front-admin && npm install",
    "install:auth-admin": "cd client/admin/auth-admin && npm install",
    "install:front-customer": "cd client/customer/front-customer && npm install",
    "install:auth": "cd client/auth && npm install",
    "proxy": "node ./proxy.js"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}